<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Farmer.FarmerDetailActivity">

    <TextView
        android:id="@+id/title_favourable_crops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="16dp"
        android:text="Favourable Crops"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"

        android:layout_below="@id/title_favourable_crops"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F8"
            android:padding="8dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">

                    <!-- for instagram -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/tomato" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Tomato"
                                    android:gravity="center_vertical"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp"
                                    android:padding="8dp"
                                    android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="98.0 %"
                                android:textAlignment="textEnd"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/potato" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="Potatoes"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="96.5 %"
                                android:textAlignment="textEnd"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ladyfinger" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="Lady finger"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="96.3 %"
                                android:textAlignment="textEnd"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/cabbage" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="Cabbage"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="95.2 %"
                                android:textAlignment="textEnd"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/bitter_gourd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="Bitter Gourd"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="94.2 %"
                                android:textAlignment="textEnd"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/tomato" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="Tomato"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:text="92.0 %"
                                android:textAlignment="textEnd"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </ScrollView>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>