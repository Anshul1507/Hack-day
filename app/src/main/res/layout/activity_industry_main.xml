<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="16dp"
        android:text="Industry Side"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/select_state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_select_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="84dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="4dp"
                android:text="Select State"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"

                android:layout_marginRight="16dp"
                android:background="@drawable/rectangular_edittext"
                android:gravity="start"
                android:padding="4dp"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edittext_state_industry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/search_icon"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Select State"
                    android:inputType="text"
                    android:padding="4dp"
                    android:textSize="24sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_select_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="4dp"
                android:text="Select City"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_city_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rectangular_edittext"
                android:gravity="start"
                android:padding="4dp"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edittext_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Select City"
                    android:inputType="text"
                    android:padding="4dp"
                    android:textSize="24sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/continue_select_state_button_industry"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_circle"
        android:elevation="12dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:padding="4dp"
        android:shadowColor="@color/colorGrey"
        android:shadowRadius="4"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>